<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.roakstudio.roomie.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_main_welcome"
        android:id="@+id/txtWelcome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:textColor="@color/colorPrimary"
        android:textSize="30sp"
        android:textStyle="italic|bold"
        android:fontFamily="sans-serif-light" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/house_logo"
        android:layout_centerInParent="true"
        android:id="@+id/img_Logo"
        android:layout_below="@+id/txtWelcome"
        android:layout_marginTop="10dp"
        tools:ignore="ContentDescription"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/str_main_motto"
        android:id="@+id/txt_Motto"
        android:layout_below="@+id/img_Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textStyle="normal"
        android:layout_marginTop="10dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/str_main_hint_Name"
        android:id="@+id/edit_main_Name"
        android:layout_below="@id/txt_Motto"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/str_main_hint_Email"
        android:inputType="textEmailAddress"
        android:id="@+id/edit_main_Email"
        android:layout_below="@id/edit_main_Name"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/str_main_hint_Phone"
        android:inputType="phone"
        android:id="@+id/edit_main_Number"
        android:layout_below="@id/edit_main_Email"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:text="@string/str_main_btn_login"
        android:id="@+id/btn_Main"
        android:layout_below="@+id/edit_main_Number"/>


</RelativeLayout>
</ScrollView>
